<%- include("../partials/header") %>

<div class="row justify-content-center">
	<div class="col-md-12 text-center">
		<h1>Edit <%= event.name %></h1>
	</div>
	<div class="col-xs-12 col-md-6 col-lg-4">
		<form action= "/events/<%= event._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="event[name]" value="<%= event.name %>" required>
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="event[price]" value="<%= event.price %>" min="0" step="0.01" required>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="event[image]" value="<%= event.image %>" required>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="event[description]" value="<%= event.description %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-outline-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/events"> Go back</a>
	</div>
</div>

<%- include("../partials/footer") %>