<%- include("../partials/header") %>

<header class="jumbotron shadow rounded">
	<div class = "container">	
		<h1><i class="fas fa-plane-arrival"></i> Welcome to EventFondue!</h1>
		<p> View events from all over the world</p>
		<p>
			<a class="btn btn-outline-secondary btn-lg" href="/events/new">Create a New Event</a>
		</p>
	</div>
</header>

<div class="row text-center">
	<% events.forEach(function(event){ %>
		<div class="col-md-4 col-sm-6 mb-4"> 
			<div class="card shadow rounded">
				<img src="<%= event.image %>" class="card-img-top index" alt="<%= event.name %>">
				<div class="card-body">
					<h5 class="card-title"><%= event.name %></h5>
					<p class="card-text">
						<% if(event.rating === 0){ %>
							<em>No reviews yet.</em>
						<% }else{ %>
							<span class="fa fa-star checked"></span>
							<span class="fa fa-star <% if(event.rating > 1.5){ %> checked <% } %>"></span>
							<span class="fa fa-star <% if(event.rating > 2.5){ %> checked <% } %>"></span>
							<span class="fa fa-star <% if(event.rating > 3.5){ %> checked <% } %>"></span>
							<span class="fa fa-star <% if(event.rating > 4.5){ %> checked <% } %>"></span>
						<% } %>
					</p>
					<a href="/events/<%= event._id %>" class="btn btn-outline-secondary">More Info</a>
				</div>
			</div>
		</div>
	<% }); %>
</div>

<%- include("../partials/footer") %>